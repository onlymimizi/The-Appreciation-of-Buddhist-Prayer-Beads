/**app.wxss**/
page {
  background-color: #f8f8f8;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/* 通用卡片样式 */
.card {
  background: #ffffff;
  border-radius: 16rpx;
  margin: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.05);
}

/* 通用按钮样式 */
.btn-primary {
  background: #007AFF;
  color: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx 40rpx;
  border: none;
  font-size: 32rpx;
}

.btn-secondary {
  background: #f0f0f0;
  color: #333333;
  border-radius: 12rpx;
  padding: 20rpx 40rpx;
  border: none;
  font-size: 32rpx;
}

/* 通用文本样式 */
.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 15rpx;
}

.text {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.5;
}

.text-gray {
  color: #999999;
}

/* 分割线 */
.divider {
  height: 1rpx;
  background: #e5e5e5;
  margin: 30rpx 0;
}