/**analysis-history.wxss**/
.container {
  padding: 20rpx;
  background: #f8f8f8;
  min-height: 100vh;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 200rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #333333;
  margin-bottom: 20rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 60rpx;
  line-height: 1.5;
}

.goto-home-btn {
  background: #007AFF;
  color: #ffffff;
  border-radius: 25rpx;
  padding: 20rpx 60rpx;
  font-size: 28rpx;
  border: none;
}

/* 历史记录列表 */
.history-list {
  padding-bottom: 40rpx;
}

.history-item {
  margin-bottom: 20rpx;
}

.item-header {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.item-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
}

.item-info {
  flex: 1;
}

.item-material {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 10rpx;
}

.item-estimate {
  font-size: 28rpx;
  color: #ff6b6b;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.item-date {
  font-size: 24rpx;
  color: #999999;
}

.item-actions {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  background: #f0f0f0;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-icon {
  font-size: 28rpx;
}

.item-comment {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.5;
  background: #f8f9fa;
  padding: 20rpx;
  border-radius: 12rpx;
  border-left: 4rpx solid #007AFF;
}