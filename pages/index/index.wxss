/* pages/index/index.wxss - 更新版本样式 */
.container {
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 统计区域 */
.stats-section {
  padding: 20rpx;
}

.stats-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: white;
}

.stats-number {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 24rpx;
  opacity: 0.9;
}

.stats-divider {
  width: 2rpx;
  height: 60rpx;
  background-color: rgba(255, 255, 255, 0.3);
}



/* 轮播图区域 */
.swiper-section {
  padding: 0 20rpx 20rpx;
}

.main-swiper {
  height: 300rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.swiper-image {
  width: 100%;
  height: 100%;
}

/* 功能区域 */
.function-section {
  padding: 20rpx;
  background: white;
  margin: 0 20rpx 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.function-title {
  text-align: center;
  margin-bottom: 30rpx;
}

.title-text {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.title-desc {
  font-size: 28rpx;
  color: #666;
}

.function-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.function-btn {
  flex: 1;
  background: white;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.3s ease;
}

.function-btn.camera-btn {
  border-color: #007AFF;
  background: linear-gradient(135deg, #007AFF10, #007AFF05);
}

.function-btn.album-btn {
  border-color: #34C759;
  background: linear-gradient(135deg, #34C75910, #34C75905);
}

.btn-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
}

.camera-btn .btn-icon {
  background: linear-gradient(135deg, #007AFF, #5AC8FA);
}

.album-btn .btn-icon {
  background: linear-gradient(135deg, #34C759, #30D158);
}

.btn-icon .iconfont {
  font-size: 40rpx;
  color: white;
}

.btn-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.btn-desc {
  font-size: 24rpx;
  color: #666;
}

/* 历史记录入口 */
.history-entry {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid #e9ecef;
}

.history-entry .iconfont {
  font-size: 32rpx;
  color: #007AFF;
}

.history-text {
  flex: 1;
  margin-left: 16rpx;
  font-size: 28rpx;
  color: #333;
}

/* 推荐商品区域 */
.recommend-section {
  margin: 0 20rpx 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 0 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-more {
  font-size: 28rpx;
  color: #007AFF;
}

.recommend-scroll {
  white-space: nowrap;
}

.recommend-list {
  display: flex;
  gap: 16rpx;
  padding-bottom: 10rpx;
}

.recommend-item {
  display: inline-block;
  width: 240rpx;
  background: white;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.recommend-image {
  width: 100%;
  height: 180rpx;
}

.recommend-info {
  padding: 16rpx;
}

.recommend-name {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.recommend-desc {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.recommend-price {
  font-size: 28rpx;
  font-weight: bold;
  color: #FF6B35;
}

/* 知识百科区域 */
.knowledge-section {
  margin: 0 20rpx 40rpx;
}

.knowledge-list {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.knowledge-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.knowledge-item:last-child {
  border-bottom: none;
}

.knowledge-content {
  flex: 1;
}

.knowledge-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.knowledge-summary {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

.knowledge-arrow {
  font-size: 24rpx;
  color: #ccc;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .function-buttons {
    flex-direction: column;
  }
  
  .stats-card {
    flex-direction: column;
    gap: 20rpx;
  }
  
  .stats-divider {
    width: 60rpx;
    height: 2rpx;
  }
}

/* 按钮点击效果 */
.function-btn:active {
  transform: scale(0.98);
  opacity: 0.8;
}

.recommend-item:active,
.knowledge-item:active,
.history-entry:active {
  background-color: #f5f5f5;
}