/* pages/result/result.wxss - 更新版本样式 */
.container {
  padding: 20rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 图片展示区域 */
.image-section {
  background: white;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.result-image {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
  background-color: #f5f5f5;
}

.image-actions {
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 32rpx;
  background-color: #f0f0f0;
  border-radius: 24rpx;
  font-size: 28rpx;
  color: #333;
  border: none;
}

.action-btn .iconfont {
  margin-right: 8rpx;
  font-size: 32rpx;
}

/* 结果卡片通用样式 */
.info-card,
.features-card,
.comment-card,
.description-card,
.cultural-card,
.care-card,
.ai-info-card {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.toggle-btn {
  font-size: 28rpx;
  color: #007AFF;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  background-color: #f0f8ff;
}

/* 基本信息卡片 */
.confidence-badge {
  background: linear-gradient(135deg, #007AFF, #5AC8FA);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.info-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.info-item {
  text-align: center;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
}

.info-label {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.info-value {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.info-value.material {
  color: #007AFF;
}

.info-value.price {
  color: #FF6B35;
}

/* 特征标签 */
.features-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.feature-tag {
  background: linear-gradient(135deg, #FF6B35, #F7931E);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

/* 评价内容 */
.comment-content {
  line-height: 1.6;
}

.comment-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.8;
}

.comment-text.ellipsis {
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.comment-text.full {
  display: block;
}

/* 描述文本 */
.description-text,
.cultural-text,
.care-text {
  font-size: 28rpx;
  color: #555;
  line-height: 1.8;
}

/* AI信息卡片 */
.ai-info-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.ai-info-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.ai-info-text,
.ai-service-text {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 操作按钮区域 */
.action-section {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-top: 40rpx;
  padding-bottom: 40rpx;
}

.primary-btn,
.secondary-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
}

.primary-btn {
  background: linear-gradient(135deg, #007AFF, #5AC8FA);
  color: white;
}

.secondary-btn {
  background-color: white;
  color: #007AFF;
  border: 2rpx solid #007AFF;
}

.primary-btn .iconfont,
.secondary-btn .iconfont {
  margin-right: 12rpx;
  font-size: 36rpx;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .info-grid {
    grid-template-columns: 1fr;
  }
  
  .image-actions {
    flex-direction: column;
    gap: 16rpx;
  }
  
  .action-btn {
    width: 100%;
  }
}

/* 动画效果 */
.info-card,
.features-card,
.comment-card,
.description-card,
.cultural-card,
.care-card {
  animation: fadeInUp 0.6s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 加载状态 */
.loading {
  opacity: 0.6;
  pointer-events: none;
}